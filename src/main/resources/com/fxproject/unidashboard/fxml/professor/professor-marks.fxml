<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="590.0" prefWidth="947.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fxproject.unidashboard.controller.ProfessorMarksController">
   <children>
      <VBox prefHeight="590.0" prefWidth="947.0" spacing="7.0" stylesheets="@../../css/combobox-style.css">
         <children>
            <ComboBox fx:id="comboGroups" cache="true" cacheHint="SPEED" prefWidth="947.0" promptText="Choose Group">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <InnerShadow />
               </effect>
            </ComboBox>
            <ComboBox fx:id="comboSubjects" prefWidth="947.0" promptText="Choose Subject">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <InnerShadow />
               </effect>
            </ComboBox>
            <ComboBox fx:id="comboStudents" prefWidth="947.0" promptText="Choose Student">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <InnerShadow />
               </effect>
            </ComboBox>
            <TableView fx:id="marksTable" editable="true" prefHeight="492.0" prefWidth="947.0" stylesheets="@../../css/tableview-style.css">
              <columns>
                <TableColumn fx:id="markCol" prefWidth="280.0" text="Mark" />
                <TableColumn fx:id="dateCol" prefWidth="280.0" text="Date" />
                  <TableColumn fx:id="descriptionCol" prefWidth="280.0" text="Description" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
