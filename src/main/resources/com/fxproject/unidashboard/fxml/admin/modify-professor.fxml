<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fxproject.unidashboard.controller.ModifyProfessorController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Accordion>
              <panes>
                <TitledPane animated="false" text="Add Wage">
                     <content>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                           <children>
                              <TextField fx:id="salary" />
                              <TextField fx:id="hourlyRate" />
                              <TextField fx:id="hoursWorked" />
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                                 <children>
                                    <Button mnemonicParsing="false" text="Cancel" />
                                    <Button mnemonicParsing="false" onAction="#addWage" text="Add" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </content></TitledPane>
                <TitledPane fx:id="addRemoveSubject" animated="false" onMousePressed="#showAddRemoveForm" text="Add/Remove Teaching Subjects">
                     <content>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="10.0">
                                 <children>
                                    <Label text="Add Subject" />
                                    <ComboBox fx:id="comboGroups" prefWidth="150.0" promptText="Choose Group" />
                                    <ComboBox fx:id="comboSubjects" prefWidth="150.0" promptText="Choose Subject" />
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                                       <children>
                                          <Button mnemonicParsing="false" text="Cancel" />
                                          <Button mnemonicParsing="false" onAction="#addSubject" text="Add" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="10.0">
                                 <children>
                                    <Label text="Remove Subject" />
                                    <ComboBox fx:id="comboRemoveGroup" prefWidth="150.0" promptText="Choose Group" />
                                    <ComboBox fx:id="comboRemoveSubject" prefWidth="150.0" promptText="Choose Subject" />
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                                       <children>
                                          <Button mnemonicParsing="false" text="Cancel" />
                                          <Button mnemonicParsing="false" onAction="#removeSubject" text="Remove" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </content></TitledPane>
              </panes>
            </Accordion>
            <fx:include fx:id="personalData" source="modify-person.fxml" />
         </children>
      </VBox>
   </children>
</AnchorPane>
